<h1>Publications</h1>

<div>
  <%=  link_to "New Publication", new_admin_publication_path, class: 'btn btn-primary' %>
</div>
<br>
<% @publications.each do |publication| %>
  <div class="card">
    <div class="card-header">
      <h3 class="card-title"><%= publication.title %></h3>
    </div>
    <div class="card-body">
      <p><%= publication.description %></p>
      <p><%= publication.file_url %></p>
    </div>
    <div class="card-footer">
      <%= link_to "View more details", admin_publication_path(publication), class: "btn btn-secondary" %>
      <%= link_to "Edit", edit_admin_publication_path(publication), class: "btn btn-secondary" %>
      <td><%= link_to 'Destroy', { action: :destroy, id: publication.id }, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <!-- <%= link_to "Delete", edit_admin_publication_path(publication), class: "btn btn-secondary" %> -->
    </div>
  </div>
<% end %>