<h3>New Publication</h3>

<%= form_for @publication, url: admin_publications_path do |form| %>
  <div class="form-group">
    <label>Title</label>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Description</label>
    <%= form.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>File URL</label>
    <%= form.text_field :file_url, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.submit "Update Publication", class: 'btn btn-primary' %>
  </div>
<% end %>